* {
    margin: 0;
    padding: 0;
}

#nav {
    position: absolute;
    background: linear-gradient(#A93CD4,#65247F);
    left: 50%;
    transform: translate(-50%);
    width: 300px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    top: -13px;
    padding-top: 18px;
    z-index: 2;
    border-radius: 20px;
    -webkit-box-shadow: 0px 0px 50px -1px rgba(80, 2, 110, 1);
    -moz-box-shadow: 0px 0px 50px -1px rgb(53, 51, 54);
    box-shadow: 0px 0px 50px -1px rgba(80, 2, 110, 1);
}

#buttons {
    list-style: none;
}

#buttons li {
    display: inline;
}

#nav #buttons li a i{
    color: black;
    font-size: 20pt;
    transition: all linear .25s;
}

#nav #buttons li a i:hover{
    transition: 0,2s;
    color: white;
    transform: scale(1.3);
}

#body {
    background-image: url('https://bronk.club/uploads/posts/2023-02/1677170563_bronk-club-p-otkritki-s-peizazhami-prirodi-pinterest-52.jpg');
    background-repeat: no-repeat;
    background-size: cover;
    height: 100vh;
    text-align: center;
    font-size: 10;
    z-index: 0;
    position: relative;
}

#nick {
    position: absolute;
    color: #470070;
    top:25%;
    left:18%;
    font-family:'Courier New', Courier, monospace;
    font-size: 10vh;
    font-weight: 900;
    text-shadow: 1px 1px 20px rgb(90, 8, 90);
    transform: translate(-50%, -50%);
    transition: 0.2s;
  }

#body span:hover {
    transition: 0.2s;
    color: #ffffff;
}

#skin {
    position: absolute;
    width: 50vh;
    bottom: 5%;
    left: 5%
}

#body ol{
    position: absolute;
    list-style: none; 
    padding: 0;
    text-shadow: 0 1px 0 rgba(255,255,255,.5);
    font-size: 3vh;
    bottom: 10%;
    left: 50%;
}

#body ol li{
    position: relative;
    display: block;
    text-align: left;
    padding: .4em .4em .4em 2em;
    margin: .5em 0;
    background: #242424;
    color: #DAD2CA;
    border-radius: .3em;
}

#body ol li a{
    text-decoration: none;
    font-weight: bolder;
    color:#ffffff
}

#body ol li a:hover{
    transition: 0.2s;
    color:#5900ff
}